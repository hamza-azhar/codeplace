<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table id="posts">
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <%= render post %>
    <% end %>
  </tbody>
</table>

<br>
<h2> Post Form </h2>
<div id="form">
  <%= render partial: "form" %>
</div>
